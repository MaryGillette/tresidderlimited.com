/* =General
-----------------------------------------------------------------------------*/


/* Remove padding and margin */
/* {margin: 0;padding: 0;} */
/*Put it back on option tag*/
option{margin:3px}

/* Class for clearing floats */
.clear {clear:both;}


/* Remove border around linked images */
img {border: 0;}

.left{
	float:left;
	margin-right:5px;
}

.right{
	float:right;
	margin-left:5px;
}
/* =Typography
default font_size / line_height
-----------------------------------------------------------------------------*/
body {
	background-color:<%= @bg_color %>;
    font:90% verdana, arial, helvetica, sans-serif;
    line-height:1.125em;  /* 16Ã—1.125=18 */
	color:<%= @text_grey %>;
}

p,td,th,legend, li {
    font-size:0.775em;
}

li p,td p{
	font-size:1em;
}

.sidebar p {
    font-size:0.75em;
}

#flash{
	padding:2px 5px;
	background-color:<%= @yellow %>;
	color:#000;
	border:1px solid <%= @dark_red %>;
}
/* =Headings
-----------------------------------------------------------------------------*/
h1{
	font-size:1.7em;
	line-height:1em;
	font-weight:normal;
	color:<%= @dark_blue %>;
	background-color:<%= @grey_blue %>;
	padding:5px;
	margin:10px 0;
}
h1 a.btn,h1 a.btn img{
	margin:0;padding:0;
}
h2,h3{
	color:<%= @dark_blue %>;
	font-weight:normal;
}
.title_note{
	font-weight:normal;
	font-size:0.6em;
}


/* =Links
-----------------------------------------------------------------------------*/
a{color:<%= @dark_blue %>;}

a:hover{background-color:<%= @grey_blue %>;color:<%= @dark_blue %>;}
a#logo:hover{
	background-color:white;
}
a.rss img{
	margin-bottom:-3px;
}

/* =Lists
-----------------------------------------------------------------------------*/
ul{
	list-style:none;
	padding:0;	
}

ul#member_edit_industries{
	margin:0;
}
.list_note{
	font-size:0.7em;
}



/* =Masthead
-----------------------------------------------------------------------------*/
#member_info{
	margin-top:10px;
	float:right;
	text-align:right;
}



/* =Branding
-----------------------------------------------------------------------------*/








/* =Main Content
-----------------------------------------------------------------------------*/




/* =Secondary Content
-----------------------------------------------------------------------------*/
#acceptance_document{
	background-color:<%= @light_grey %>;
	width:800px;
	padding:10px 20px 20px 20px;
	height:600px;
	border:1px solid <%= @dark_blue %>;
	overflow:scroll;
	margin-bottom:20px;
}

#acceptance_document h2{
	padding-bottom:10px;
	border-bottom:1px solid <%= @dark_blue %>;
}

#approval_sheet_review{
	margin-bottom:20px;
}
/* =Footer
-----------------------------------------------------------------------------*/

/* =Fieldset
-----------------------------------------------------------------------------*/
fieldset{
	border:1px solid <%= @dark_blue %>;
	margin-bottom:20px;
}

fieldset.col{
	float:left;
	padding:20px;
}

fieldset#industries{
	width:300px;
}
legend{
	color:<%= @dark_blue %>;	
}

/* =Forms
-----------------------------------------------------------------------------*/

input, select{
	border:1px solid <%= @dark_blue %>;
}

input#remember_me{
	border-width:0;
}
input{
	padding:1px 3px;
}
input.btn{
	background-color:#dc8810;
	color:#fff;
	border:1px solid <%= @dark_blue %>;
	text-transform:uppercase;
	padding:1px 5px;
	cursor:pointer;
}

input.short{
	width:6em;
}
input.percentage{
	width:3em;   
}
textarea{
	height:100px;
	width:500px;
}

textarea.small{
	height:2em;
	width:30em;
}

textarea.large{
	height:300px;
}

textarea.huge{
	height:500px;
	width:800px;
}
textarea.mceNoEditor{
	height:50px;
}

input.number{
	width:4em;
}

.data_filters select.list{
	height:100px;
}

.data_filters select.narrow{
	width:100px;
}


/* =Tables
-----------------------------------------------------------------------------*/

table {border-spacing: 0;border-collapse: collapse; margin:10px 0;}
td {text-align: left;font-weight: normal;}

td,th{
	padding:0.1em 1em;
	border:1px solid <%= @light_grey %>;
	background: <%= @grey_blue %>;
}

thead th{
	color:#fff;
	font-weight:normal;
	background-color:<%= @dark_blue %>;
	}

thead th a{
	color:#fff;
}
tr.odd td{
	background-color:<%= @light_grey %>;
	border-color:<%= @grey_blue %>;
}

tbody tr:hover td{background-color:#fff;}


tr.single_row td, tr.single_row:hover td{
	background-color:#fff;
}


th.submit {
	padding:5px 0;
}

td.long_detail{
	width:150px;
}

/* =Misc 1
-----------------------------------------------------------------------------*/
#week_select{
	margin:10px 0;
}

dt{
	color:<%= @dark_blue %>;
}

dl.faq dd{
	border-bottom:1px dashed <%= @dark_blue %>;
	margin-bottom:20px;
}

#announcements {
	margin:0 0 20px 0;
	padding:0;
	border:1px solid <%= @dark_blue %>;
}
#announcements p#title{
	font-weight:normal;
	margin:0;
	padding:3px;
	background-color:<%= @dark_red %>;
	color:white;
}
#announcements dl,#announcements h5,#announcements p{
	margin:5px;
}
#announcements dl dt{
	border-bottom:1px solid <%= @dark_blue %>;
}

#approval_sheet_submission form,#approval_sheet_submission div{
	display:inline;
}

/* =ToolTip
-----------------------------------------------------------------------------*/
.tool_tip{
	position:relative;
}
.tool_tip a,.tool_tip a img{
	padding:0;
	margin:0;
}
.tool_tip a:hover{
	background-color:transparent;
}
.tool_tip .tip{
	font-size:0.8em;
	display:none;
	position:absolute;
	bottom:20px;
	right:20px;	
	width:20em;
	padding:2px;
}

.tool_tip .tip_yellow, .tool_tip .tip_white{
	background-color:<%= @yellow %>;
	color:<%= @dark_red %>;
	border:1px solid <%= @dark_red %>;
}



/* =RateCalc
-----------------------------------------------------------------------------*/
#rate_calc {
	float:left;
}
#rate_calc #commission_roles, #rate_calc p{
	margin:10px;
	padding:0;
}
#rate_calc .submit{
	text-align:right;
}

#rate_calc #commission_roles,#rate_calc #amounts{
	width:20em;
	float:left;
	
}

#rate_calc #amounts{
    font-size:0.775em;
}

