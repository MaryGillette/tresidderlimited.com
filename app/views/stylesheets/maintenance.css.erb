/* Remove padding and margin */
/* {margin: 0;padding: 0;} */
/*Put it back on option tag*/
option{margin:3px}

/* Class for clearing floats */
.clear {clear:both;}


/* Remove border around linked images */
img {border: 0;}


/* =Typography
default font_size / line_height
-----------------------------------------------------------------------------*/
body {
    font:100% verdana, arial, helvetica, sans-serif;
    line-height:1.125em;  /* 16Ã—1.125=18 */
	color:#404041;
}

p,td,th,legend, li {
    font-size:0.775em;
}

li p,td p{
	font-size:1em;
}

.sidebar p {
    font-size:0.75em;
}

#flash{
	padding:2px 5px;
	background-color:#8a1e14;
	color:#fff;
	border:1px solid #0b287f;
}
/* =Headings
-----------------------------------------------------------------------------*/
h1{
	font-size:2em;
	line-height:1em;
	font-weight:normal;
	color:#0b287f;
	background-color:#e6e7f1;
	padding:3px;
}
h1 a.btn,h1 a.btn img{
	margin:0;padding:0;
}
h2,h3{
	color:#0b287f;
	font-weight:normal;
}
.title_note{
	font-weight:normal;
	font-size:0.6em;
}


/* =Links
-----------------------------------------------------------------------------*/
a{color:#0b287f;}

a:hover{background-color:#e6e7f1;color:#0b287f;}
a#logo:hover{
	background-color:white;
}
/* =Lists
-----------------------------------------------------------------------------*/
ul{list-style:none;}

.list_note{
	font-size:0.7em;
}



/* =Masthead
-----------------------------------------------------------------------------*/
#member_info{
	float:right;
	text-align:right;
}



