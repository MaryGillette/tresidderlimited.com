/* =Fieldset
-----------------------------------------------------------------------------*/
fieldset{
	border-color:#0b287f;
	margin-bottom:20px;
}

fieldset.col{
	float:left;
	padding:20px;
}
legend{
	color:#0b287f;	
}

/* =Forms
-----------------------------------------------------------------------------*/
input, select{
	border:1px solid #0b287f;
}
input{
	padding:1px 3px;
}
input.btn{
	background-color:#dc8810;
	color:#fff;
	border:1px solid #0b287f;
	text-transform:uppercase;
	padding:1px 5px;
	cursor:pointer;
}

input.percentage{
	width:3em;
}
textarea{
	height:100px;
	width:500px;
}

textarea.small{
	height:2em;
}

textarea.large{
	height:300px;
}

textarea.huge{
	height:500px;
	width:800px;
}
textarea.mceNoEditor{
	height:50px;
}

input.number{
	width:4em;
}

.data_filters select.list{
	height:100px;
}
/* =Tables
-----------------------------------------------------------------------------*/

table {border-spacing: 0;border-collapse: collapse; margin:10px 0;}
td {text-align: left;font-weight: normal;}

td,th{
	padding:0.1em 1em;
	border:1px solid #e6e7f1;
	background: #e6e7f1;
}

thead th{
	color:#fff;
	font-weight:normal;
	background-color:#0b287f;}

tr.odd td{background-color:#f8f7f9;}

tbody tr:hover td{background-color:#fff;}


tr.single_row td, tr.single_row:hover td{
	background-color:#fff;
}


tr.submit th a{
	color:#fff;
}

td.long_detail{
	width:150px;
}
